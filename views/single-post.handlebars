<div class="post">
  <div class="card">
    <div class="card-header flex-row justify-space-between">
      <h2>
        {{post.title}}
        <br>Posted by {{post.User.username}} on {{format_date post.createdAt}}
      </h2>
    </div>
    <div class="card-body">
      {{post.body}}
    </div>
  </div>
</div>

{{#if post.Comments}}
<section class="card">
  <div class="card-header">
    <h3>Comments</h3>
  </div>

  <div class="card-body">
    {{#each post.Comments}}
    <div>
      <p>
        {{body}}
      </p>
      <p>
        &mdash; {{User.username}}, {{format_date createdAt}}
      </p>
    </div>
    {{/each}}
  </div>
</section>
{{/if}}

<form id="new-comment-form" class="card">
  <div class="card-header">
    <h3>Add New Comment</h3>
  </div>

  <div class="card-body">
    <input id="post-id" type="hidden" name="post-id" value="{{post.id}}" />

    <label class="form-label" for="comment-body">Comment</label>

    <textarea id="comment-body" name="comment-body" class="form-input"></textarea>

    <button type="submit" class="btn">Submit</button>
  </div>
</form>
</div>

<script src="/js/comment.js"></script>