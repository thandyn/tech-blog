<form id="signup-form">
  <div class="form-group">
    <label for="username-input-login">Create Username</label>
    <input type="username" class="form-control" id="username-input-signup">
  </div>
  <div class="form-group">
    <label for="password-input-login">Create Password</label>
    <input type="password" class="form-control" id="password-input-signup">
  </div>
  <button type="submit" class="btn btn-primary">Sign Up!</button>
  <a href="/login">Login instead</a>
</form>